<?xml version="1.0" encoding="utf-8"?>
<widget id="com.intaar.rian.testapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
	<name>Red de Información Agropecuaria Nacional</name>
	<description>
        Información RIAN - (por ahora ando testeando test...)
    </description>
	<author email="ramos.lucas@inta.gob.ar" href="http://rian.inta.gob.ar">
        RIAN Sistemas - EEA Anguil
    </author>
    
	<content src="index.html"/>
	<access origin="*" onlyInBrowser="true"/>
	<icon src="icon.png"/>
	
	<preference name="fullscreen" value="true"/>
	<preference name="webviewbounce" value="false"/>
	<preference name="DisallowOverscroll" value="true"/>
	<preference name="exit-on-suspend" value="false"/>
	<preference name="loadUrlTimeoutValue" value="700000"/>
	
	<!-- OneSignal -->
	<preference name="phonegap-version" value="cli-5.4.1" />
	<preference name="android-build-tool" value="gradle"/>
		
	<!-- Added the following intents to support the removal of whitelist code from base cordova to a plugin -->
	<!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
	<plugin name="cordova-plugin-fullscreen" source="npm"/>
	<plugin name="cordova-plugin-whitelist" version="1"/>

	<!-- OneSignal -->
	<gap:plugin name="onesignal-cordova-plugin" spec="^2.0.6" source="npm"/>
	
	<allow-intent href="http://*/*"/>
	<allow-intent href="https://*/*"/>
	<allow-intent href="tel:*"/>
	<allow-intent href="sms:*"/>
	<allow-intent href="mailto:*"/>
	<allow-intent href="geo:*"/>
	<platform name="android">
		<allow-intent href="market:*"/>
	</platform>
</widget>
